<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree App"
        android:id="@+id/textView0"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/button0"
        android:background="#ffff9837"
        android:layout_below="@+id/textView0"
        android:layout_marginTop="20dp"
        android:layout_alignEnd="@+id/textView0"
        android:layout_alignStart="@+id/textView0"
        android:onClick="sendMessage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score App"
        android:id="@+id/button1"
        android:background="#ffff9837"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/button0"
        android:layout_alignStart="@+id/button0"
        android:layout_alignEnd="@+id/button0"
        android:onClick="sendMessage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/button2"
        android:background="#ffff9837"
        android:layout_below="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:layout_marginTop="20dp"
        android:layout_alignEnd="@+id/button1"
        android:onClick="sendMessage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build it bigger"
        android:id="@+id/button3"
        android:background="#ffff9837"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:onClick="sendMessage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/button4"
        android:background="#ffff9837"
        android:layout_below="@+id/button3"
        android:layout_marginTop="20dp"
        android:layout_alignEnd="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:onClick="sendMessage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capstone: My Own App"
        android:id="@+id/buttonRed"
        android:background="#ffff6a36"
        android:layout_below="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/button4"
        android:onClick="sendMessage"/>

</RelativeLayout>

