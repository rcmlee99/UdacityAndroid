

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.accenture.udacity1.DetailActivityFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/placeholder"
        android:id="@+id/movieTitleText"
        android:padding="10dp"
        android:textColor="@color/white_color"
        android:textStyle="bold"
        android:textSize="@dimen/detail_text_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#29a89e"
        android:visibility="visible" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="@dimen/poster_height"
        android:layout_marginTop="5dp"
        android:id="@+id/movieImage"
        android:layout_below="@id/movieTitleText"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/placeholder"
        android:visibility="visible" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/some_date"
        android:id="@+id/movieRelease"
        android:textColor="@color/text_color"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
        android:layout_alignTop="@+id/movieImage"
        android:layout_toRightOf="@+id/movieImage"
        android:visibility="visible" />

        <TextView
            android:id="@+id/voteAvg"
            android:text="@string/vote_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text_color"
            android:layout_below="@+id/movieRelease"
            android:layout_alignLeft="@+id/movieRelease"
            android:layout_alignStart="@+id/movieRelease"
            android:visibility="visible"/>


    <TextView
        android:id="@+id/movieOverview"
        android:scrollbars="vertical"
        android:maxLines="8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/para"
        android:textColor="@color/text_color"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="@dimen/detail_para_padding"
        android:layout_below="@+id/movieImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:editable="false" />

</RelativeLayout>
